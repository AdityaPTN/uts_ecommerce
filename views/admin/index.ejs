<%- include('../layout/header') %>

<div class="container my-4">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) {%>
                <div class="alert alert-dismissible fade show alert-<%= message.type  %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %> </strong>
                </div> 
            <% } %> 
        <div style="display: flex;">
            <div class="card my-2" style="width: 25rem;">
                <div class="card-body">
                <div class="text-success fs-2">
                <i class="fa-solid fa-rupiah-sign"></i>
                <% let revenue = 0 %> 
                <% data.forEach((item)=> { %>
                    <% revenue = revenue + item.total %> 
                <% }) %>
                <%= revenue %>
                <div class="fs-4 mt-2 lead">Revenue</div>
            </div>
        </div>
        </div>

            <div class="card my-2" style="width: 25rem;">
                <div class="card-body">
                <div class="text-primary fs-2">
                <i class="fa-solid fa-check-to-slot"></i>
                <% let done = 0 %> 
                <% data.forEach((item)=> { %>
                    <% done = done + 1 %>     
                <% }) %> 
                <%= done %>
                <div class="mt-2 lead">Done</div>
            </div>
        </div>
        </div>

            <div class="card my-2" style="width: 25rem;">
                <div class="card-body">
                <div class="text-warning fs-2">
                <i class="fa-solid fa-cart-shopping"></i>
                <% let orders = 0 %> 
                <% order.forEach((item)=> { %>
                    <% orders = orders + 1 %>     
                <% }) %> 
                <%= orders %>
                <div class="mt-2 lead">Orders</div>
            </div>
        </div>
        </div>
    </div>

            <div class="table-responsive">
                    <table class="table table-striped text-center my-4">
                        <thead>
                            <tr class="table-dark">
                                <th class="text-center">ID</th>
                                <th class="text-center">Product List</th>
                                <th class="text-center">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((item,index) => { %>
                            <tr class="align-middle">
                                <td><%= index+1 %></td>
                                <td><%= item.product_list %></td>
                                <td>Rp. <%= item.total %></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
            </div> 
        </div>
    </div>
</div>

<%- include('../layout/footer') %> 


    