<%- include('../../layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4" >
            <div class="card shadow">
                <div class="card-header bg-dark">
                    <h3 class="text-light">Add New Product</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/products/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required />
                        </div>
                        <div class="mb-3">
                            <label for="price">Price</label>
                            <input type="text" name="price" class="form-control form-control-lg" placeholder="Enter price" required />
                        </div>
                        <div class="mb-3">
                            <label for="stock">Stock</label>
                            <input type="text" name="stock" class="form-control form-control-lg" placeholder="Enter stock" required />
                        </div>
                        <div class="mb-3">
                            <label for="description">Description</label>
                            <input type="text" name="description" class="form-control form-control-lg" placeholder="Enter description" required />
                        </div>
                        <div class="mb-3">
                            <label for="type_name">Type</label>
                            <select class="form-select" name="type_name">
                                <option selected>Select Type</option>
                                <% types.forEach((item) => { %>
                                <option value="<%= item.name %> - <%= item.category_name %>"><%= item.name  %> - <%= item.category_name  %></option>
                                <% }) %> 
                              </select>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <a href="/products" value="Back" class="btn btn-success btn-lg">Back</a>
                            <input type="reset" value="Reset" class="btn btn-danger btn-lg" />
                            <input type="submit" name="submit" value="Add Product" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../layout/footer') %> 


    