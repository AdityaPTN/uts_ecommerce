<%- include('../../layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4" >
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit Product (<%= product.name  %> )</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/products/update/<%= product._id  %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" value="<%= product.name  %>" name="name" class="form-control form-control-lg" placeholder="Enter name" required />
                        </div>
                        <div class="mb-3">
                            <label for="price">Price</label>
                            <input type="text" value="<%= product.price  %>" name="price" class="form-control form-control-lg" placeholder="Enter price" required />
                        </div>
                        <div class="mb-3">
                            <label for="stock">Stock</label>
                            <input type="text" value="<%= product.stock  %>" name="stock" class="form-control form-control-lg" placeholder="Enter price" required />
                        </div>
                        <div class="mb-3">
                            <label for="description">Description</label>
                            <input type="text" value="<%= product.description  %>" name="description" class="form-control form-control-lg" placeholder="Enter price" required />
                        </div>
                        <div class="mb-3">
                            <label for="type_name">Type</label>
                            <select class="form-select" name="type_name" disabled>
                                <option value="<%= product.type_name %> selected"><%= product.type_name%></option>
                              </select>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg"/>
                            <img src="/<%= product.image %>" width="100" class="img-thumbnail mt-1" alt="">
                        </div>
                        <input type="hidden" name="old_image" value="<%= product.image  %>">
                        <div class="mb-3">
                            <a href="/products" value="Back" class="btn btn-primary btn-lg">Back</a>
                            <input type="reset" value="Reset" class="btn btn-danger btn-lg" />
                            <input type="submit" name="submit" value="Update Product" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../layout/footer') %> 


    