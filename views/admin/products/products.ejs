<%- include('../../layout/header') %>

<div class="container my-4">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) {%>
                <div class="alert alert-dismissible fade show alert-<%= message.type  %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %> </strong>
                </div> 
            <% } %> 
            <a href="/products/add" class="btn btn-success my-3">Add Product</a>
            <div class="table-responsive">
                <% if (products != '') { %>
                    <table class="table table-striped text-center my-4">
                        <thead>
                            <tr class="table-dark">
                                <th class="text-center">ID</th>
                                <th class="text-center">Image</th>
                                <th class="text-center">Name</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Stock</th>
                                <th class="text-center">Description</th>
                                <th class="text-center">Type</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach((item, index) => { %>
                            <tr class="align-middle">
                                <td><%= index+1 %> </td>
                                <td><img src="<%= item.image  %>" width="50" class="img-thumbnail"/></td>
                                <td><%= item.name  %></td>
                                <td><%= item.price  %></td>
                                <td><%= item.stock  %></td>
                                <td><%= item.description  %></td>
                                <td><%= item.type_name  %></td>
                                <td>
                                    <a href="/products/edit/<%= item._id  %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/products/delete/<%= item._id  %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else {%>
                    <h1 class="text-center text-secondary mt-5">No products found in the database</h1>
                <% } %> 
                
            </div> 
        </div>
    </div>
</div>

<%- include('../../layout/footer') %> 


    